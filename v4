Clear-Host

Write-Host "7007 Searching Your Cheats" -ForegroundColor Magenta
Write-Host "Made By 7007"

$system32Path = "$env:SystemRoot\System32"
$desktopPath = [Environment]::GetFolderPath("Desktop")
$downloadsPath = [Environment]::GetFolderPath("Downloads")  # Hata d√ºzeltildi

$paths = @($system32Path, $desktopPath, $downloadsPath)
$files = @()

foreach ($path in $paths) {
    $files += Get-ChildItem -Path $path -File -Recurse -ErrorAction SilentlyContinue
}

foreach ($file in $files) {
    if ($file.Extension -eq ".exe") {
        $signature = $null
        try {
            $signature = (Get-AuthenticodeSignature $file.FullName).Status
        } catch {
            $signature = "Error"
        }

        if ($signature -ne "Valid") {
            Write-Host "Unsigned or Error: $($file.FullName)" -ForegroundColor Yellow
        }
    }
}
